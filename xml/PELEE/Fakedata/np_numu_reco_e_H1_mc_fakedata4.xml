<!-- NuMu selection -->
 <MultisimFile treename="NeutrinoSelectionFilter" filename="/uboone/data/users/wospakrk/SBNFit/SpectrumAndCovariance/rootfiles/numu_numu_fakedataset1.root" scale = "0.511" pot = "1.34e21" > 
     <branch
         name="neutrinoenergy"
         type="double"
         associated_subchannel="nu_uBooNE_numu_bnb"
         additional_weight="weightSplineTimesTune"
      />
 </MultisimFile>

 <variation_list>
    <blacklist>XSecShape_CCMEC_Genie</blacklist>
 </variation_list>

<!-- weights -->
 <WeightMaps>
    <variation pattern="All_Genie" weight_formula="1.0/weightTune"/>
    <variation pattern="NormCCCOH_Genie" />
    <variation pattern="NormNCCOH_Genie" />
    <variation pattern="RPA_CCQE_Genie" />
    <variation pattern="RootinoFix_Genie" />
    <variation pattern="TunedCentralValue_Genie" />
    <variation pattern="AxFFCCQEshape_Genie"  mode="minmax"/>
    <variation pattern="DecayAngMEC_Genie"  mode="minmax"/>
    <variation pattern="ThetaDelta2NRad_Genie"  mode="minmax"/>
    <variation pattern="Theta_Delta2Npi_Genie"  mode="minmax"/>
    <variation pattern="VecFFCCQEshape_Genie"  mode="minmax"/>
    <variation pattern="XSecShape_CCMEC_Genie"  mode="minmax"/>
 </WeightMaps>
